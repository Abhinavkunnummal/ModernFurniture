                          <th>Image</th>
                          <th>Quantity</th>
                          <th>Payment Method</th>
                          <th>Order Status</th>
                          <th>Price</th>
                          <th><strong>Total Amount</strong></th>
                        </tr>
                        <% order.orderedItem.forEach(item => { %>
