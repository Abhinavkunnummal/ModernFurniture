    `;

    const options = {
      format: 'Letter', // Set the desired paper size
      border: '10mm', // Set the border size
    };

    htmlPdf.create(html, options).toBuffer((err, buffer) => {
      if (err) {
        reject(err);
      } else {
        resolve(buffer);
      }
    });
