  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

        <%-include('../layouts/sidenav.ejs') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->
          <!-- / Navbar -->
          <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4">
                <span class="text-muted fw-light">Account Settings /</span> Address
              </h4>
          
              <div class="row">
                <div class="col-md-12">
                  <div class="card mb-4">
                    <form id="formAddressDetails" method="post" action="/saveAddress">
                      <div class="card-header">
                        <h5 class="card-title mb-0"><h3>Address Details</h3></h5>
                        <div class="d-flex flex-column">
                          <br>
                          <% address.forEach(addr => { %>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="selectedAddress" value="<%= addr._id %>" id="address_<%= addr._id %>">
                            <label class="form-check-label" for="address_<%= addr._id %>">
                              <h5><%= addr.address %>, <%= addr.city %>, <%= addr.state %>, <%= addr.zipcode %>
                                <a href="/addressEdit?id=<%= addr._id %>" class="btn btn-primary">edit</a>
                                <a href="javascript:void(0);" class="btn btn-danger" onclick="confirmDelete('<%= addr._id %>')">Delete</a>
                              </h5>
                            </label>
                          </div>
                          <% }); %>
                          <a href="/addAddress" class="btn btn-success fw-bold ms-auto">+Add New Address</a>
                        </div>
                      </div>
                      <!-- Address Form -->
                      <div class="card-body">
                        <div class="row">
                          <!-- Address fields here -->
                        </div>
                        <div class="mt-2">
                          <button type="submit" class="btn btn-primary me-2">Save Address</button>
                          <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                        </div>
                      </div>
                    </form>
                    <!-- /Address Form -->
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->
          </div>
          

        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
