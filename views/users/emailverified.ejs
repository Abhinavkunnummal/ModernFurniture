<%- include('../layouts/header.ejs') %>

<%- include('../layouts/navbar.ejs') %>

<!-- Product Details Section -->
<section class="product-details-section py-5">
  <div class="container">
    <div class="row">
      <!-- Main Product Image Column -->
      <div class="col-lg-6">
        <div class="product-image">
          <img src="/productimage/<%= products.image[0] %>" alt="Product Image" class="img-fluid">
        </div>
      </div>
      <!-- Product Details Column -->
      <div class="col-lg-6">
        <div class="product-details">
          <h1 class="product-title mb-3"><%= products.name %></h1>
          <p class="product-price mb-3">$<%= products.price.toFixed(2) %></p>
          <div class="product-description mb-4">
            <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed consequat felis eu dui sollicitudin, sit amet convallis ipsum aliquet. Phasellus accumsan purus a dui gravida, eu euismod odio tempus. Nam quis arcu at ante semper lacinia.</p>
          </div>
          <div class="product-action">
            <button class="btn btn-primary">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Additional Product Preview Images -->
    <div class="row mt-4">
      <% for(let i=1; i<products.image.length; i++) { %>
        <div class="col-lg-4">
          <div class="product-preview-image">
            <img src="/productimage/<%= products.image[i] %>" alt="Product Preview Image <%= i+1 %>" class="img-fluid">
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>

<%- include('../layouts/footer.ejs') %>
