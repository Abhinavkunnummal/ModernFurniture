    <section class="content-main">
        <form id="categoryForm" action="/admin/categoryitem" method="post" >
            <h1>Welcome to Category Page</h1>
            <div>
                <h3>Edit Product</h3>
                <% if(typeof message !=='undefined') {%>
                    <p style="color:red;"><%= message %></p>
