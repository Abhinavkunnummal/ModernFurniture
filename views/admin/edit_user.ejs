<%- include('../form_layouts/header.ejs') %>

<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Edit User</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-10">
        <div class="wrap d-md-flex">
          <div class="img" style="background-image: url(form_assets/images/logo1.jpg)"></div>
          <div class="login-wrap p-4 p-md-5">
            <div class="d-flex">
              <div class="w-100">
                <!-- <h3 class="mb-4">Sign In</h3> -->
              
              </div>
              <div class="w-100">
                <!-- <p class="social-media d-flex justify-content-end">
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
									</p> -->
              </div>
            </div>
            <form action="/admin/edit_user" method="post" class="signin-form">
              <div class="form-group mb-2">
                <label class="label" for="name">Name</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Name" value="<%= user.name %>"
                  name="name"
                  required
                />
              </div>
              <div class="form-group mb-2">
                <label class="label" for="password">Email</label>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  placeholder="email" value="<%= user.email %>"
                  required
                />
              </div>
              <div class="form-group mb-2">
                <label class="label" for="mobile">Mobile</label>
                <input
                  type="number"
                  class="form-control"
                  name="mobile"
                  placeholder="Mobile" value="<%= user.mobile %>"
                  required
                />
              </div>
              <!-- <div class="form-group mb-2">
                <label class="label" for="password">Password</label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Password" value="<%= user.password %>"
                  required
                />
              </div> -->
              <div class="form-group mb-2">
                <label for="verified">Verified</label>
                <input type="radio" name="verified" value="1" <% if(user.is_verified==1){ %>checked <% } %>>
                <label for="unverified">unverified</label>
                <input type="radio" name="verified" value="0" <% if(user.is_verified==0){ %>checked <% } %>>
              </div>
              <input type="hidden" name="" id="" value=" <%= user._id %> ">
              <div class="form-group">
                <button
                  type="submit"
                  class="form-control btn btn-primary rounded submit px-3 btn"
                >
                  Submit User
                </button>
              </div>
              <div class="form-group d-md-flex">
                <div class="w-50 text-left">
                  <!-- <label class="checkbox-wrap checkbox-primary mb-0">Remember Me
									  <input type="checkbox" checked>
									  <span class="checkmark"></span>
										</label> -->
                </div>
                <!-- <div class="w-50 text-md-right">
                  <a href="#">Forgot Password</a>
                </div> -->
              </div>
            </form>
            <!-- <p class="text-center">
              Not a member? <a x` href="/admi/renderSignUp">Sign Up</a> -->
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../form_layouts/footer.ejs') %>
