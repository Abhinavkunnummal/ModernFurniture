<%- include('../admin_layouts/header.ejs') %>
<%- include('../admin_layouts/sidenav.ejs') %>

<main class="main-wrap">
    <header class="main-header navbar">
        <h3>Order Dashboard</h3>
        <!-- Header content -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    </header>

    <section class="content-main">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <!-- <th>Name</th> -->
                        <th>OrderId</th>
                        <th>Ordered Items</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orderData.forEach((order, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <!-- <td><%= order.userId.name %></td> -->
                            <td><%= order._id %></td>
                            <td>
                                <% order.orderedItem.forEach((item) => { %>
                                    <div class="order-box">
                                        <img src="/productimage/<%= item.productId.image[0] %>" style="width: 75px; height: 75px;">
                                        <div><%= item.productId.name %> - <%= item.quantity %></div>
                                    </div>
                                <% }) %>
                            </td>
                            <td><%= order.orderAmount %></td>
                            <td><%= order.orderStatus %></td>
                            <td>
                                <!-- Add action buttons or links if needed -->
                            </td>
                        </tr>
                        <!-- Add a spacer row between orders -->
                        <tr class="spacer-row">
                            <td colspan="6"></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>

    <%- include('../admin_layouts/footer.ejs') %>
</main>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<style>
    .order-box {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }

    /* Customize the border appearance */
    .spacer-row {
        height: 20px; /* Adjust the height as needed for separation */
    }
</style>
