<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }
       .content-main {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }
       .table-responsive {
            overflow-x: auto;
            margin-top: 20px;
        }
       .table {
            width: 100%;
            border-collapse: collapse;
        }
       .table th,.table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
       .order-box {
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            background-color: #f9f9f9;
            border-radius: 5px;
        }
       .order-box img {
            margin-right: 10px;
        }
       .spacer-row {
            height: 20px;
            background-color: #eee;
        }
        @media (max-width: 768px) {
          .table-responsive {
                overflow-x: scroll;
            }
        }
    </style>
</head>
<body>
<%- include('../admin_layouts/header.ejs') %>
<%- include('../admin_layouts/sidenav.ejs') %>

<main class="main-wrap">
    <header class="main-header navbar">
        <h3>Order Dashboard</h3>
        <!-- Header content -->
    </header>

    <section class="content-main">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>OrderId</th>
                        <th>Ordered Items</th>
                        <th>Price</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orderData.reverse().forEach((order, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= order._id %></td>
                            <td>
                                <% order.orderedItem.forEach((item) => { %>
                                    <div class="order-box">
                                        <img src="/productimage/<%= item.productId.image[0] %>" alt="<%= item.productId.name %>" style="width: 75px; height: 75px;">
                                        <div><%= item.productId.name %> - <%= item.quantity %></div>
                                    </div>
                                <% }) %>
                            </td>
                            <td>
                                <% order.orderedItem.forEach((item) => { %>
                                    <div class="order-box">
                                        <div><%= item.totalProductAmount %> </div>
                                    </div>
                                <% }) %>
                            </td>
                            <td><%= order.orderAmount %></td>
                            <td>
                                                                                                   
                                <% order.orderedItem.forEach((item) => { %>
                                   <div class="container p-1">
                                    <button class="btn btn-success border changeStatusBtn" id="orderid" data-toggle="modal" data-target="#statusChangeModal" data-index="<%= order._id %>">Change Status</button>
                               </div>
                                    <% }) %>
                       
                            </td>
                            <td>
                              <% order.orderedItem.forEach((item) => { %>
                               
                                    <div style="color: red;"><%= order.orderStatus %> </div>
                              
                            <% }) %>
                            </td>
                            
                            
                        </tr>
                        <!-- Add a spacer row between orders -->
                        <tr class="spacer-row">
                            <td colspan="6"></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>

     <!-- Status Change Modal -->
     <div class="modal fade" id="statusChangeModal" tabindex="-1" role="dialog" aria-labelledby="statusChangeModalLabel" aria-hidden="true">
     <div class="modal-dialog" role="document">
         <div class="modal-content">
             <div class="modal-header">
                 <h5 class="modal-title" id="statusChangeModalLabel">Change Order Status</h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                 </button>
             </div>
             <div class="modal-body">
                <select class="form-control" id="modalOrderStatus">
                  <option value="" disabled selected>Choose an option</option>
                  <option value="pending">Pending</option>
                  <option value="processing">Processing</option>
                  <option value="shipped">Shipped</option>
                  <option value="delivered">Delivered</option>
                  <option value="cancelled">Cancelled</option>
                </select>
              </div>
              
             <div class="modal-footer">
                 <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                 <button type="button" class="btn btn-primary" data-dismiss="modal" id="saveStatus">Save changes</button>
             </div>
         </div>
     </div>
 </div>

<%- include('../admin_layouts/footer.ejs') %>
</main>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    $(document).ready(function(){
        let currentOrderId;

        $('.changeStatusBtn').on('click', function(e){
            e.preventDefault();
            currentOrderId = $(this).data('index');
            $('#modalOrderStatus').val('');
            $('#statusChangeModal').modal('show');
        });

        $('#saveStatus').on('click', function(e){
            e.preventDefault();
            var selectedStatus = $('#modalOrderStatus').val();
            if (!selectedStatus) {
                swal("Error", "Please choose a status.", "error");
                return;
            }

            $.post('/admin/updatestatus', { orderId: currentOrderId, status: selectedStatus }, function(response){
                if(response.success){
                    swal("Success", "Order status updated successfully.", "success").then(() => {
                        location.reload();
                    });
                } else {
                    swal("Error", "Failed to update order status.", "error");
                }
            });
        });
    });
</script>

</body>
</html>
